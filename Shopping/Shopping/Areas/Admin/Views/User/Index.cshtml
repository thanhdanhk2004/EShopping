@model IEnumerable<AppUserModel>
@{
    ViewData["Title"] = "User page";
}
<h3>List Order</h3>
<a class="btn btn-primary" asp-action="create" asp-controller="User">Add user</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">Phone number</th>
            <th scope="col">Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                @if(item.PhoneNumber is null)
                {
                    <td>Null</td>
                }
                else
                {
                    <td>@item.PhoneNumber</td>
                }
                
                <td>@item.RoleId</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="User" asp-route-Id="@item.Id">View</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="User" asp-route-Id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>